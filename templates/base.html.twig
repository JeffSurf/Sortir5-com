<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir -{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <!-- Container wrapper -->
                <div class="container">
                    <!-- Navbar brand -->
                    <a class="navbar-brand me-2" href={{ path('app_home') }}>
                        <img
                                height="16"
                                alt="Sortir Logo"
                                loading="lazy"
                                style="margin-top: -1px;"
                        />
                    </a>

                    <!-- Collapsible wrapper -->
                    <div class="collapse navbar-collapse" id="navbarButtonsExample">
                        <!-- Left links -->
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Sorties</a>
                            </li>
                        </ul>
                        <!-- Left links -->

                        <div class="d-flex align-items-center">
                            {% if is_granted("ROLE_USER") %}
                                <div class="nav-item dropdown d-flex">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center no-arrow" href="#" id="navbarDropdownMenuLink"
                                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{ app.user.pseudo }}</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="navbarDropdownMenuLink">
                                        <li><a class="dropdown-item" href="{{ path('app_profil_voir') }}">Profil</a></li>
                                        <li><a class="dropdown-item" href="#">Mes sorties</a></li>
                                        <li class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Se d√©connecter</a></li>
                                    </ul>
                                </div>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-outline-primary px-3 me-2">
                                    Se connecter
                                </a>
                            {% endif %}
                        </div>
                    </div>
                    <!-- Collapsible wrapper -->
                </div>
                <!-- Container wrapper -->
            </nav>
            <!-- Navbar -->
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            {{ include('footer.html.twig') }}
        {% endblock %}
    </body>
</html>
