{% extends '/admin/base.html.twig' %}

{% block title %}{{ action }} un participant{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('preview') }}
{% endblock %}

{% block body %}
    <div class="container container-page admin-page">
        <h1>{{ action }} un participant</h1>
        {{  form_start(form) }}

        <div class="form-row">
            {{  form_row(form.pseudo) }}
        </div>

        <div class="form-row participant-img">
            {{  form_label(form.imageProfil) }}
            <img id="preview" class="profile-pic " src="{{ asset('uploads/participants/' ~ participant.imageProfil) }}" alt="Photo de profil">
            {{  form_widget(form.imageProfil) }}
            {{  form_row(form.rgpd) }}
        </div>

        <div class="form-row">
            {{  form_row(form.prenom) }}
        </div>

        <div class="form-row">
            {{  form_row(form.nom) }}
        </div>

        <div class="form-row">
            {{  form_row(form.email) }}
        </div>

        <div class="form-row">
            {{  form_row(form.telephone) }}
        </div>

        <div class="form-row">
            {{  form_row(form.site) }}
        </div>

        <div class="form-row">
            {{  form_row(form.actif) }}
        </div>

        <div class="form-row">
            {{  form_row(form.mdp) }}
        </div>

        <div class="form-row d-flex flex-row gap-3">
            {{  form_widget(form.valider) }}
            <a href="{{ path('app_admin_participant_list') }}">{{  form_widget(form.annuler) }}</a>
        </div>

        {{  form_end(form) }}
    </div>


{% endblock %}