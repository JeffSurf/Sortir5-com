{% extends '/admin/base.html.twig' %}

{% block title %}{{ action }} un lieu{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ action }} un lieu</h1>
        {{  form_start(form) }}

        <div class="form-row">
            {{  form_row(form.nom) }}
        </div>

        <div class="form-row">
            {{  form_row(form.adresse) }}
        </div>

        <div class="form-row">
            {{  form_row(form.latitude) }}
        </div>

        <div class="form-row">
            {{  form_row(form.longitude) }}
        </div>

        <div class="form-row">
            {{  form_row(form.ville) }}
        </div>

        {{  form_end(form) }}
    </div>


{% endblock %}