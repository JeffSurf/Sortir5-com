{% extends '/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center">Affichage d'une sortie</h1>
        {{  form_start(sortie) }}

        <div class="row">
            <div class="col-6">
                <div class="form-row" >
                    {{  form_row(sortie.nom) }}
                </div>

                <div class="form-row">
                    {{  form_row(sortie.dateHeureDebut) }}
                </div>

                <div class="form-row">
                    {{  form_row(sortie.dateLimiteInscription) }}
                </div>

                <div class="form-row">
                    {{  form_row(sortie.nbInscriptionsMax) }}
                </div>

                <div class="form-row">
                    {{  form_row(sortie.duree) }}
                </div>

                <div class="form-row">
                    {{  form_row(sortie.infosSortie) }}
                </div>
            </div>

            <div class="col-6">

            </div>
        </div>

        {{  form_end(sortie) }}
    <div>
{% endblock %}