{% extends 'base.html.twig' %}

{% block title %}Villes{% endblock %}

{% block body %}

    <div class="container admin-page">

        <h1>Liste des villes</h1>

        {{  form_start(searchForm) }}
            <div class="form-row">{{  form_widget(searchForm.search) }}</div>
        {{  form_end(searchForm) }}

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Code postal</th>
                <th scope="col">Actions</th>

            </tr>
            </thead>

            <tbody>
            {{ include('ville/add.html.twig') }}
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nom }}</td>
                    <td>({{ ville.codepostal }})</td>
                    <td>
                        <a href="{{ path('app_admin_ville_update', {'id': ville.id}) }}">
                            <button class="btn btn-primary btn-sm">Modifier</button>
                        </a>
                        <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ ville.nom }} ? Attention cette action est irréversible.')" href="{{ path('app_admin_ville_delete', {'id': ville.id}) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </a>
                    </td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}