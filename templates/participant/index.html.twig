{% extends 'base.html.twig' %}

{% block title %}Participants{% endblock %}

{% block body %}

    <div class="container">

        <h1>Liste des participants</h1>

        <table class="table" >
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Prénom Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Rôle</th>
                <th scope="col">Statut</th>
                <th scope="col">Actions</th>
                <th scope="col">
                    <a href="{{ path('participant_add') }}">➕</a>
                </th>

            </tr>
            </thead>

            <tbody>
            {% for participant in participants %}
                <tr>
                    <th scope="row">{{ participant.id }}</th>
                    <td>
                        <img height="30" src="{{ asset('uploads/participants/' ~ participant.imageProfil) }}">
                        <span>{{ participant.pseudo }}</span>
                    </td>
                    <td>{{ participant.prenom }} {{ participant.nom | upper}}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.telephone | default("Non renseigné")}}</td>
                    <td>{{ 'ROLE_ADMIN' in participant.roles ? 'Administrateur' : 'Utilisateur'}}</td>
                    <td>{{ participant.actif ? 'Actif' : 'Inactif' }}</td>
                    <td>
                        <a href="{{ path('participant_update', {'id': participant.id}) }}">🖊️</a>
                        <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ participant.prenom }} {{ participant.nom | upper }} ? Attention cette action est irréversible.')" href="{{ path('participant_delete', {'id': participant.id}) }}">🗑️</a>
                    </td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}