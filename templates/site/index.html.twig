{% extends 'base.html.twig' %}

{% block title %}Sites{% endblock %}

{% block body %}

    <div class="container">

        <h1>Liste des sites</h1>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
                <th scope="col">
                    <a href="{{ path('site_add') }}">➕</a>
                </th>

            </tr>
            </thead>

            <tbody>
            {% for site in sites %}
                <tr>
                    <td>{{ site.nom }}</td>
                    <td>
                        <a href="{{ path('site_add', {'id': site.id}) }}">🖊️</a>
                        <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ site.nom }} ? Attention cette action est irréversible.')" href="{{ path('site_delete', {'id': site.id}) }}">🗑️</a>
                    </td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}