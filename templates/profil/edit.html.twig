{% extends 'base.html.twig' %}

{% block title %}Editer le profil{% endblock %}

{% block body %}

    <div class="container">
        <h1>Modifier le profil</h1>

        {{ form_start(profilForm) }}

        {{ form_errors(profilForm) }}


        <div class="row">
            <div class="col-4">
                <div class="mb-3">
                    <label class="form-label" for="nom-profil">Nom</label>
                    <input
                            id="nom-profil"
                            name="{{ field_name(profilForm.nom) }}"
                            value="{{ field_value(profilForm.nom) }}"
                            placeholder="{{ field_label(profilForm.nom) }}"
                            class="form-control"
                            {{ not is_granted("ROLE_ADMIN") ? "readonly" : "" }}
                    />
                </div>
            </div>

            <div class="col-4">
                <div class="mb-3">
                    <label class="form-label" for="prenom-profil">Prenom</label>
                    <input
                            id="prenom-profil"
                            name="{{ field_name(profilForm.prenom) }}"
                            value="{{ field_value(profilForm.prenom) }}"
                            placeholder="{{ field_label(profilForm.prenom) }}"
                            class="form-control"
                            {{ not is_granted("ROLE_ADMIN") ? "readonly" : "" }}
                    />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                {{ form_row(profilForm.pseudo) }}
            </div>

            <div class="col-4">
                {{ form_row(profilForm.telephone) }}
            </div>

            <div class="col-4">
                {{ form_row(profilForm.email) }}
            </div>

            <div class="col-4">
                {{ form_row(profilForm.plainPassword) }}
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                {{ form_row(
                    profilForm.image,
                    {'label': user.imageProfil == 'default_profile_picture.png' ? 'Ajouter une' : 'Modifier votre' ~ ' image de profil'}
                ) }}
            </div>
            <div class="col-2">
                <img style="height: 100px;" src="{{ asset('uploads/participants/' ~ user.imageProfil) }}" alt="Photo de profil">
            </div>
        </div>

        <button type="submit" class="btn btn-outline-primary">Soumettre</button>
        <a class="btn btn-link" href="{{ path('app_profil_edit_password', {'pseudo': user.pseudo}) }}">Modifier votre mot de passe ?</a>

        {{ form_end(profilForm) }}
    </div>

{% endblock %}